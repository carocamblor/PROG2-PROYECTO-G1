<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %> 
<head>
    <link rel="stylesheet" href="/css/editProfile.css">
</head>
<body>
    <%- include('partials/headerLoggedOn') %> 

    <h4 class="title"> Edit Profile</h4>

    <form action="/users/myprofile/username/nicolelapidus" class="edit-profile">
      <div class="input-group">
        <span class="input-group-text">First and last name</span>
        <input type="text" aria-label="First name" class="form-control">
        <input type="text" aria-label="Last name" class="form-control">
      </div>
        <div class="input-group">
          <span class="input-group-text">Biography</span>
          <textarea class="form-control" aria-label="With textarea"></textarea>
        </div>
        <div class="input-group mb-3">
          <label class="input-group-text" for="inputGroupFile01">Profile Picture</label>
          <input type="file" class="form-control" id="inputGroupFile01">
        </div>
        <select style="margin: 16px;" class="form-select" aria-label="Default select example">
          <option selected>Level</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
        </select>
        <button type="submit" class="btn btn-primary">Done</button>
      </form>

    <%- include('partials/footer') %> 
</body>
</html>